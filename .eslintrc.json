{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },

    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],

    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },

    "plugins": [
        "react"
    ],

    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "react/display-name": "off"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },

    "overrides": [
        {
            "files": ["**/__tests__/**/*.js", "**/__tests__/**/*.jsx"],
            "env": {
                "jest": true,
                "node": true
            },
            "rules": {
                "react/prop-types": "off",
                "react/display-name": "off"
            }
        }
    ]
}